<!DOCTYPE html>
<html>
<head>
  <title><%= @page.title %> - <%= @website.title %></title>
	<%= stylesheet_link_tag    "public", theme_path(@website.theme, format: :css), media: "all", "data-turbolinks-track" => true %>
	<% if @website.include_js? %>
	  <%= javascript_include_tag "public", theme_path(@website.theme, format: :js), "data-turbolinks-track" => true %>
	<% else %>
		<%= javascript_include_tag theme_path(@website.theme, format: :js), "data-turbolinks-track" => true %>
	<% end %>
	<%= tag :meta, name: "description", content: @page.description unless @page.description.blank? %>
	<%= tag :meta, name: "viewport", content: "initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" %>
	<%= tag :meta, name: "apple-mobile-web-app-capable", content: "yes" %>
	<%= tag :meta, name: "apple-mobile-web-app-status-bar-style", content: "black" %>
	<%= auto_discovery_link_tag :atom, feed_path %>
	<%= auto_discovery_link_tag :rss, feed_path(format: :rss) %>
  <%= csrf_meta_tags %>
	<%= @website.header.to_s.html_safe %>
</head>
<body data-primary_colour="<%= @website.primary_colour %>" data-secondary_colour="<%= @website.secondary_colour %>">

<div id="timetravel">
	<%= render "pages/includes/yield" %>
</div>

<%= render "powered_by" %>

</body>
</html>
