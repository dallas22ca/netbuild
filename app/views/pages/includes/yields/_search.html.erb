<% if params[:q] %>
<% else %>
<% end %>

<%= form_tag public_page_path("search"), method: :get, authenticity_token: false do %>
	<%= text_field_tag :q, params[:q] %>
	<%= submit_tag "Search!", name: nil %>
<% end %>

You searched for <b><%= params[:q] %></b>!


<ul style="list-style: disc; margin-left: 25px; ">
	<% Block.where("details->'content' ilike ?", "%#{params[:q]}%").each do |result| %>
		<% if result.wrapper.page %>
			<li style="margin: 15px; ">
				<b><%= link_to result.wrapper.page.title, public_page_path(result.wrapper.page.permalink) %></b><br>
				<%= result.data["content"].truncate 64 %>
			</li>
		<% end %>
	<% end %>
</ul>