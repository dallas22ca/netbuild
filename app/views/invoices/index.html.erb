<%= render "manage_nav" %>

<h1>Invoices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.date, invoice %></td>
				<td><%= link_to invoice.membership.user.email, invoice %></td>
        <td><%= link_to number_to_currency(invoice.total / 100), invoice %></td>
      </tr>
    <% end %>
  </tbody>
</table>