<div id="manage_nav">
	<div class="container">
    <%= link_to image_tag("/imgs/white_logo.png"), root_path, id: "logo" %>
		
		<%= form_tag "search", method: :get do %>
			<%= text_field_tag :q, params[:q], placeholder: "Search..." %>
		<% end %>
		
		<ul class="nav">
			<li>
				<%= link_to "Website", manage_path("theme") %>
				<ul class="subnav">
					<li><%= link_to "Theme", manage_path("theme") %></li>
					<li><%= link_to "Pages", manage_path("pages") %></li>
					<li><%= link_to "Responses", manage_path("responses") %></li>
					
					<% if @website.can_accept_money? %>
						<li><%= link_to "Invoices", manage_path("invoices") %></li>
					<% end %>
					
					<li><%= link_to "Addons", manage_path("addons") %></li>
					<li><%= link_to "Visit My Site", root_path %></li>
				</ul>
			</li>
			
			<% if website_admin? %>
				<li><%= link_to "People", manage_path("people") %></li>
			<% end %>

			<li>
				<%= link_to "Me", edit_user_registration_path %>
				<ul class="subnav">
					<%= link_to "My Account", edit_user_registration_path %>
					<li>
						<%= link_to "Sign Out", destroy_user_session_path if user_signed_in? %>
						<%= link_to "Sign In", new_user_session_path unless signed_in? %>
					</li>
				</ul>
			</li>
		</ul>
		
		<div class="clear"></div>
	</div>
</div>