<% cache document do %>
	<%= content_tag_for :li, document do %>
		<%= link_to "<i class=\"icon-trash\"></i>".html_safe, theme_document_path(document.theme, document), method: :delete, data: { confirm: "Are you sure you want to delete this file?" }, class: "delete", remote: true %>
		<%= link_to "<i class=\"icon-file-text\"></i> #{document.name}".html_safe, edit_theme_document_path(document.theme, document) %>
	<% end %>
<% end %>