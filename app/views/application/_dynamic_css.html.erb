<style type="text/css">
	#manage_nav, .primary-button {
	  background: <%= @website.primary_colour %>;
	  background: -moz-linear-gradient(top,  <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %> 0%, <%= @website.primary_colour %> 100%); /* FF3.6+ */
	  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %>), color-stop(100%, <%= @website.primary_colour %>)); /* Chrome,Safari4+ */
	  background: -webkit-linear-gradient(top,  <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %> 0%, <%= @website.primary_colour %> 100%); /* Chrome10+,Safari5.1+ */
	  background: -o-linear-gradient(top,  <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %> 0%, <%= @website.primary_colour %> 100%); /* Opera 11.10+ */
	  background: -ms-linear-gradient(top,  <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %> 0%, <%= @website.primary_colour %> 100%); /* IE10+ */
	  background: linear-gradient(to bottom,  <%= LiquidFilters::rgba(@website.primary_colour, 0.85) %> 0%, <%= @website.primary_colour %> 100%); /* W3C */
	  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='<%= LiquidFilters::rgba(@website.primary_colour, 0.85) %>', endColorstr='<%= @website.primary_colour %>',GradientType=0 ); /* IE6-9 */
	}
	
	.secondary-button {
	  background: <%= @website.secondary_colour %>;
	  background: -moz-linear-gradient(top,  <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %> 0%, <%= @website.secondary_colour %> 100%); /* FF3.6+ */
	  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %>), color-stop(100%, <%= @website.secondary_colour %>)); /* Chrome,Safari4+ */
	  background: -webkit-linear-gradient(top,  <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %> 0%, <%= @website.secondary_colour %> 100%); /* Chrome10+,Safari5.1+ */
	  background: -o-linear-gradient(top,  <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %> 0%, <%= @website.secondary_colour %> 100%); /* Opera 11.10+ */
	  background: -ms-linear-gradient(top,  <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %> 0%, <%= @website.secondary_colour %> 100%); /* IE10+ */
	  background: linear-gradient(to bottom,  <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %> 0%, <%= @website.secondary_colour %> 100%); /* W3C */
	  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='<%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %>', endColorstr='<%= @website.secondary_colour %>',GradientType=0 ); /* IE6-9 */
	}
	
	#manage_nav {
		border-bottom: 5px solid <%= LiquidFilters::rgba(@website.secondary_colour, 0.85) %>;
	}
	
	#topbar .subnav a {
		background: <%= @website.primary_colour %> !important;
	}
	
	[contenteditable]:focus {
		outline-color: {{ primary }};
	}
</style>