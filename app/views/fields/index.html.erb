<%= render "manage_nav" %>

<h1>Fields</h1>

<%= link_to "Add New Field", new_field_path, class: "button primary-button" %><br><br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Permalink</th>
      <th>Data type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= link_to field.name, edit_field_path(field) %></td>
        <td><%= link_to field.permalink, edit_field_path(field) %></td>
        <td><%= link_to field.data_type, edit_field_path(field) %></td>
        <td><%= link_to "<i class=\"icon-remove\"></i>".html_safe, field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
