<div class="section">
  
  <h3>Sign In</h2>
		
	<%= flash[:notice] %>

  <%= form_for(User.new, :as => "user", :url => session_path("user")) do |f| %>
		<%= f.hidden_field :subdomain, value: @website.permalink %>
	
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "full_width" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "full_width" %>
    </div>

    <div class="field">
      <%= f.check_box :remember_me, checked: true %> 
			<%= f.label :remember_me %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in", class: "big green button full_width" %>
    </div>
  <% end %>
	
	<%= link_to "Sign Up", public_page_path("sign_up") %>

</div>