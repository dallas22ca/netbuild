<%= form_for [@theme, @document], remote: !@document.new_record? do |f| %>
  <%= f.text_field :name %>
	<%= f.select :extension, options_for_select([["HTML", "html"], ["CSS", "css"], ["JS", "js"], ["Partial", "partial"]], @document.extension) %><br>
	<%= f.text_area :body %>
  <%= f.submit "Save Document", class: "save_document" %>
<% end %>
