<%= render "manage_nav" %>

<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.date, invoice %></td>
        <td><%= number_to_currency invoice.total / 100 %></td>
      </tr>
    <% end %>
  </tbody>
</table>