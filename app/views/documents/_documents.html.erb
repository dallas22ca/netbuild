<ul id="documents">
	<li style="margin-bottom: 30px; "><%= link_to "New Document", new_theme_document_path(@theme), class: "button primary-button" %></li>
	
	<% %w[html css js partial].each do |ext| %>
		<li class="extension">
			<i class="icon-folder-open"></i>
			<%= ext == "partial" ? ext.pluralize : ext %>
			<ul class="nav documents <%= "#{ext}_documents" %>">
				<%= render @theme.documents.where(extension: ext) %>
			</ul>
		</li>
	<% end %>
</ul>