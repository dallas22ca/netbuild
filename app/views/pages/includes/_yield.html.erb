<%=

	case @page.permalink
	when "sign_in"
		@yield = render("pages/includes/yields/sessions")
	when "sign_up"
		@yield = render("pages/includes/yields/registrations")
	when "sitemap"
		@yield = render("pages/includes/yields/sitemap")
	when "members"
		@yield = render("pages/includes/yields/members")
	when "search"
		@yield = render("pages/includes/yields/search")
	else
		@yield = ""
	end
	
	@details = {
		"primary" => @website.primary_colour,
		"secondary" => @website.secondary_colour,
		"logo" => "/themes/shared/white_logo.png",
		"cta" => "/themes/shared/miniban.png",
		"nav" => render("pages/includes/nav"),
		"social" => render("pages/includes/social"),
		"subnav" => render("pages/includes/subnav"),
		"title" => @page.title,
		"sign_inout_icon" => user_signed_in? ? "unlock" : "lock",
		"sign_inout_path" => user_signed_in? ? destroy_user_session_path : public_page_path("sign_in"),
		"home_path" => root_path,
		"manage_path" => public_page_path("members"),
		"search_path" => public_page_path("search"),
		"adminable?" => adminable?,
		"q" => params[:q],
		"yield" => @yield
	}.merge(@blocks)

	Liquid::Template.parse( @page.body_with_partials ).render(@details, filters: [LiquidFilters]).html_safe

%>