<% if @website.allow_signups? %>
	<div class="section">
  
		<%= flash[:notice] %>

	  <%= form_for(User.new, :as => "user", :url => public_page_path("accounts")) do |f| %>
			<%= f.hidden_field :subdomain, value: @website.permalink %>
	
	    <div class="field">
	      <%= f.label :email %><br />
	      <%= f.email_field :email, class: "full_width" %>
	    </div>

	    <div class="field">
	      <%= f.label :password %><br />
	      <%= f.password_field :password, class: "full_width" %>
	    </div>
		
	    <div class="field">
	      <%= f.label :password_confirmation %><br />
	      <%= f.password_field :password_confirmation, class: "full_width" %>
	    </div>

	    <div class="actions">
	      <%= f.submit "Sign in", class: "primary-button button" %>
	    </div>
	  <% end %>

	</div>
<% else %>
	<p>There's nothing to sign up for.</p>
<% end %>